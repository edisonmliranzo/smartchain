# SmartChain Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =====================================
# VALIDATOR CONFIGURATION
# =====================================

# Your validator private key (KEEP SECRET!)
# Generate a new key: npm run wallet generate
VALIDATOR_PRIVATE_KEY=

# P2P Network - comma-separated list of seed nodes
P2P_SEEDS=ws://161.97.150.119:9545

# P2P port (default: 9545)
P2P_PORT=9545

# =====================================
# SERVER CONFIGURATION
# =====================================

# RPC server port (default: 8545)
RPC_PORT=8545

# WebSocket server port (default: 8546)
WS_PORT=8546

# Enable block production (default: true)
ENABLE_MINING=true

# =====================================
# OPTIONAL - AI FEATURES
# =====================================

# OpenAI API key for AI Contract Architect
OPENAI_API_KEY=

