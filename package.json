{
  "name": "smartchain",
  "version": "1.0.0",
  "description": "EVM-Compatible Blockchain with Proof of Authority Consensus",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "node": "node dist/index.js",
    "wallet": "ts-node src/cli/wallet.ts",
    "explorer:dev": "cd explorer && npm run dev",
    "explorer:build": "cd explorer && npm run build",
    "explorer:deploy": "cd explorer && npm run build && firebase deploy --only hosting",
    "enterprise:node1": "ts-node src/enterprise-node.ts --node 1 --port 8545",
    "enterprise:node2": "ts-node src/enterprise-node.ts --node 2 --port 8546 --peers ws://localhost:9545",
    "enterprise:node3": "ts-node src/enterprise-node.ts --node 3 --port 8547 --peers ws://localhost:9545,ws://localhost:9546",
    "enterprise:start": "ts-node src/enterprise-node.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edisonmliranzo/smartchain.git"
  },
  "keywords": [
    "blockchain",
    "evm",
    "ethereum",
    "smartchain"
  ],
  "author": "Edison Liranzo",
  "license": "MIT",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/edisonmliranzo/smartchain/issues"
  },
  "homepage": "https://github.com/edisonmliranzo/smartchain#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^6.16.0",
    "express": "^4.21.0",
    "openai": "^6.15.0",
    "solc": "^0.8.33",
    "uuid": "^9.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}